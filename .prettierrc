{
  "$schema": "https://json.schemastore.org/prettierrc.json",
  "singleQuote": false,
  "semi": false,
  "trailingComma": "all",
  "importOrder": ["^@/(.*)$", "^[./]"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,

  "bracketSpacing": true,
  "endOfLine": "auto",
  "printWidth": 120,
  "proseWrap": "always",
  "tabWidth": 2,
  "useTabs": false,
  "overrides": [
    {
      "files": ["*.sol"],
      "options": {
        "compiler": "0.8.18",
        "singleQuote": false,
        "tabWidth": 4
      }
    },
    {
      "files": ["*.ts"],
      "options": {
        "singleQuote": true
      }
    }
  ]
}
